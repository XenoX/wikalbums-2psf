<div class="col-3 mb-4">
    <div class="card">
        <img src="{{ album.cover }}" class="card-img-top" alt="">
        <div class="card-body">
            <h5 class="card-title">{{ album.name }}</h5>
            <p class="card-text">
                <b>Sortie le</b> : {{ album.releasedAt|date('d/m/Y') }}<br>
                <b>Cat√©gorie(s)</b> :
                {% for category in album.categories %}
                    {{ category.name }}{{ not loop.last ? ', ' }}
                {% endfor %}
                <br><br>
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-danger" href="{{ path('app_album_delete', {'id': album.id}) }}">
                        Supprimer
                    </a>
                {% endif %}
            </p>
        </div>
    </div>
</div>
